<div class="login-box sign-in-sign-up-box" id="login-with-password">
  <div class="title">Log In</div>
  <%= form_for :session, url: sessions_path, remote: true, html: { class: 'login-form sign-in-sign-up-form' } do |f| %>
      <%= hidden_field_tag :authenticity_token, csrf_meta_tag %>
      <div class="form-item email-form-item">
        <label><i class="fa fa-envelope-o" aria-hidden="true"></i></label>
        <%= f.text_field :email, placeholder: 'Your email', class: 'email-input' %>
      </div>
      <div class="input-tip hidden">
        <span class="error" id="email-error">
          <i class="fa fa-minus-circle" aria-hidden="true"></i>
          <span class="error-message"></span>
        </span>
      </div>

      <div class="form-item">
        <label><i class="fa fa-lock" aria-hidden="true"></i></label>
        <%= f.password_field :password, placeholder: 'Your password', class: 'password-input' %>
      </div>
      <div class="input-tip hidden">
        <span class="error" id="password-error">
          <i class="fa fa-minus-circle" aria-hidden="true"></i>
          <span class="error-message"></span>
        </span>
      </div>


      <div class="other-options">
        <%= link_to 'No account? Sign up now', signup_path %>
      </div>

      <button class="btn login-btn submit-button" type="button">Submit</button>
      <%= f.submit '', class: 'hidden hidden-submit-button' %>

  <% end %>

</div>
